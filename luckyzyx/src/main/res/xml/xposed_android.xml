<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="系统框架"
        app:key="android">

        <SwitchPreference
            app:defaultValue="false"
            app:key="disable_flag_secure"
            app:iconSpaceReserved="false"
            app:title="禁用FLAG_SECURE"
            app:summary="在不允许截图的APP中允许截图"/>

        <SwitchPreference
            app:defaultValue="false"
            app:key="statusbar_top_notification"
            app:iconSpaceReserved="false"
            app:title="移除状态栏上层警告"
            app:summary="移除状态栏“此应用在其他应用上层显示”"/>

    </PreferenceCategory>

</PreferenceScreen>