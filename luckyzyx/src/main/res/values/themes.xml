<resources>
    <style name="Theme.Luckyzyx" parent="Theme.Material3.Light.NoActionBar">
        <!-- 状态栏背景色 -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- 改变状态栏文字颜色,true黑色,false白色 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Luckyzyx.xx" parent="Theme.MaterialComponents.Light">
        <!--主题色,标题栏背景色-->
        <item name="colorPrimary">@color/white</item>
        <!--按钮Text颜色-->
        <item name="colorOnPrimary">@color/black</item>
        <!--控件选中,Preference组标题-->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/green</item>

        <!--错误的颜色-->
        <item name="colorError">#F44336</item>
        <item name="colorOnError">@color/black</item>
        <!--表面的颜色,即材料“纸张”:底部导航栏背景色-->
        <item name="colorSurface">@color/white</item>
        <!--普通状态控件表面颜色:复选框,底部导航栏默认色-->
        <item name="colorOnSurface">@color/black</item>

        <!-- 跟随系统设置自动切换DarkMode-->
        <item name="android:forceDarkAllowed">true</item>
        <!-- 全局text title颜色 -->
<!--        <item name="android:textColorPrimary">@color/black</item>-->
        <!-- 全局text summer颜色 -->
<!--        <item name="android:textColorSecondary">@color/black</item>-->

        <!--状态栏,导航栏相关-->
        <!--状态栏颜色 -->
<!--        <item name="android:statusBarColor">@color/transparent</item>-->
        <!-- 标题栏放置activity最上层 -->
<!--        <item name="android:windowOverscan">true</item>-->
        <!-- 状态栏透明并和标题栏不占用APP高度,相当于statusBarColor=transparent + windowOverscan=true-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!-- 改变状态栏文字颜色， true黑色， false白色，API23可用-->
        <item name="android:windowLightStatusBar">true</item>
        <!-- 全屏显示，隐藏状态栏、导航栏、底部导航栏 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 隐藏title标题栏 -->
        <item name="windowNoTitle">false</item>
        <!-- 让底部虚拟按键变半透明灰色,覆盖在Activity之上（默认false，activity会居于底部导航栏顶部），如果设为true，activity会放置在标题栏下 -->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--底部导航栏选中色-->
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyleLight</item>
        <!--虚拟按键沉浸颜色-->
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>

        <!--对话框按钮颜色-->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>

        <!-- button 文字是否全部大写（默认true）-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ActionBarLight" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:titleTextColor">@color/white</item>
    </style>
    <style name="MyBottomNavigationStyleLight" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <!--底部导航背景的颜色:默认颜色colorSurface用于表面底部导航,colorPrimary彩色底部导航-->
<!--        <item name="backgroundTint">@color/white</item>-->
        <!--itemTextColor/ itemIconTint:底部导航项目图标和标签的颜色-->
        <!--对于表面底部导航和彩色底部导航:默认颜色为colorOnSurface/colorPrimary,选中colorOnPrimary-->
<!--        <item name="itemTextColor">@color/gray</item>-->
<!--        <item name="itemIconTint">@color/gray</item>-->
        <!--选中色-->
        <item name="android:checkboxStyle">@color/black</item>
    </style>
    <style name="MyBottomNavigationStyleNight" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:checkboxStyle">@color/white</item>
    </style>
    <!--确定按钮样式-->
    <style name="PositiveButtonStyle" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--取消按钮样式-->
    <style name="NegativeButtonStyle" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--中立按钮样式-->
    <style name="NeutralButtonStyle" parent="@style/Widget.Material3.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>