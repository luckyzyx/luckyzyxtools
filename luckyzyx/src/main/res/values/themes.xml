<resources>
    <style name="Theme.Luckyzyx" parent="Theme.MaterialComponents.Light">

        <!--应用的主要色调,actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/white</item>
        <!-- 应用的主要暗色调,状态栏颜色 -->
        <item name="colorPrimaryDark">@color/white</item>
        <!--主色上层的颜色,如按钮字体色-->
        <item name="colorOnPrimary">@color/black</item>
        <!--选中色,焦点色-->
        <item name="colorSecondary">@color/black</item>

        <!-- 全局text title颜色 -->
<!--        <item name="android:textColorPrimary">@color/black</item>-->
        <!-- 全局text summer颜色 -->
<!--        <item name="android:textColorSecondary">@color/black</item>-->

        <!--状态栏,导航栏相关-->
        <!--状态栏颜色 -->
<!--        <item name="android:statusBarColor">@color/transparent</item>-->
        <!-- 标题栏放置activity最上层 -->
<!--        <item name="android:windowOverscan">true</item>-->
        <!-- 状态栏透明并和标题栏不占用APP高度,相当于statusBarColor=transparent + windowOverscan=true-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!-- 改变状态栏文字颜色， true黑色， false白色，API23可用-->
        <item name="android:windowLightStatusBar">true</item>
        <!-- 全屏显示，隐藏状态栏、导航栏、底部导航栏 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 隐藏title标题栏 -->
        <item name="windowNoTitle">false</item>
        <!-- 让底部虚拟按键变半透明灰色,覆盖在Activity之上（默认false，activity会居于底部导航栏顶部），如果设为true，activity会放置在标题栏下 -->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--底部导航栏选中色-->
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
        <!--虚拟按键沉浸颜色-->
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>

        <!--对话框按钮颜色-->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>

        <!-- button 文字是否全部大写（默认true）-->
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Theme.Luckyzyx_green" parent="Theme.MaterialComponents.Light">
        <!--应用的主要色调,actionBar背景默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/green</item>
        <!-- 应用的主要暗色调,状态栏颜色 -->
        <item name="colorPrimaryDark">@color/green</item>
        <!--选中色,焦点色,Preference组 文字色-->
        <item name="colorSecondary">@color/green</item>
        <!-- 标题栏字体颜色 -->
        <item name="actionBarTheme">@style/ActionBarLight</item>
        <!-- 状态栏文字颜色,true黑色,false白色,API23可用-->
        <item name="android:windowLightStatusBar">false</item>
        <!--虚拟按键沉浸颜色-->
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.Luckyzyx_purple" parent="Theme.MaterialComponents.Light">
        <!--应用的主要色调,actionBar背景默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/purple_200</item>
        <!-- 应用的主要暗色调,状态栏颜色 -->
        <item name="colorPrimaryDark">@color/purple_200</item>
        <!--选中色,焦点色,Preference组 文字色-->
        <item name="colorSecondary">@color/purple_200</item>
        <!-- 标题栏字体颜色 -->
        <item name="actionBarTheme">@style/ActionBarLight</item>
        <!-- 状态栏文字颜色,true黑色,false白色,API23可用-->
        <item name="android:windowLightStatusBar">false</item>
        <!--虚拟按键沉浸颜色-->
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="ActionBarLight" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:titleTextColor">@color/white</item>
    </style>
    <style name="MyBottomNavigationStyle" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:checkboxStyle">@color/black</item>
    </style>
    <!--确定按钮样式-->
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--取消按钮样式-->
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--中立按钮样式-->
    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>