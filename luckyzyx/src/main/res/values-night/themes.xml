<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Luckyzyx" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/dkgray</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <!--        控件text字体颜色-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/white</item>
        <!--底部导航栏选中色-->
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
        <!--状态栏沉浸颜色 -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!--虚拟按键沉浸颜色-->
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Title字体颜色 -->
        <item name="actionBarTheme">@style/MyActionBar</item>
        <!-- Menu字体颜色 -->
        <item name="actionBarPopupTheme">@style/MyActionBarPopupTheme</item>
        <!--对话框按钮颜色-->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>

    </style>
    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:titleTextColor">@color/white</item>
    </style>
    <style name="MyActionBarPopupTheme" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyBottomNavigationStyle" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--确定按钮样式-->
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--取消按钮样式-->
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--中立按钮样式-->
    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>